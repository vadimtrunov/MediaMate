# MediaMate Stack Environment Variables
# Generated by: mediamate stack init

# === Timezone ===
TZ=Etc/UTC

# === Directory Paths ===
CONFIG_DIR={{.ConfigDir}}
MEDIA_DIR={{.MediaDir}}
MOVIES_DIR={{.MoviesDir}}
TV_DIR={{.TVDir}}
BOOKS_DIR={{.BooksDir}}
DOWNLOADS_DIR={{.DownloadsDir}}

# === API Keys (fill in your values) ===

# Anthropic API key for Claude LLM
MEDIAMATE_LLM_API_KEY=your-anthropic-api-key-here

# TMDb API key for movie/TV metadata
MEDIAMATE_TMDB_API_KEY=your-tmdb-api-key-here
{{- if .HasRadarr}}

# Radarr API key (find in Radarr → Settings → General → API Key)
MEDIAMATE_RADARR_API_KEY=your-radarr-api-key-here
{{- end}}
{{- if .HasSonarr}}

# Sonarr API key (find in Sonarr → Settings → General → API Key)
MEDIAMATE_SONARR_API_KEY=your-sonarr-api-key-here
{{- end}}
{{- if .HasReadarr}}

# Readarr API key (find in Readarr → Settings → General → API Key)
MEDIAMATE_READARR_API_KEY=your-readarr-api-key-here
{{- end}}
{{- if .HasJellyfin}}

# Jellyfin API key (find in Jellyfin → Dashboard → API Keys)
MEDIAMATE_JELLYFIN_API_KEY=your-jellyfin-api-key-here
{{- end}}
{{- if .HasPlex}}

# Plex token (find in Plex → Account Settings)
PLEX_TOKEN=your-plex-token-here
{{- end}}

# Telegram bot token (from @BotFather)
MEDIAMATE_TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# === Generated Passwords (auto-generated, change if needed) ===
{{- range $key, $value := .Secrets}}
{{$key}}={{$value}}
{{- end}}
{{- if .HasGluetun}}

# === VPN Configuration ===
VPN_SERVICE_PROVIDER=custom
VPN_TYPE=wireguard
# Add your VPN provider-specific variables below
{{- end}}
